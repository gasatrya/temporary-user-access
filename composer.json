{
  "name": "gasatrya/temporary-user-access",
  "description": "Create temporary users with expiration dates for secure, time-limited access to your WordPress site.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Ga Satrya"
    }
  ],
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
    "wp-coding-standards/wpcs": "3.2.0",
    "squizlabs/php_codesniffer": "^3.13",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "archive": {
    "exclude": [
      ".git/",
      ".gitignore",
      "README.md",
      "composer.json",
      "composer.lock",
      "phpcs.xml.dist",
      ".phpcs-cache",
      "vendor/",
      "node_modules/",
      "package.json",
      "package-lock.json",
      "LICENSE",
      ".vscode/",
      "CLAUDE.md",
      ".github/",
      "docs/"
    ]
  },
  "scripts": {
    "zip": "git archive --prefix=temporary-user-access/ -o temporary-user-access.zip HEAD",
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "i18n": "wp i18n make-pot . languages/temporary-user-access.pot"
  }
}
